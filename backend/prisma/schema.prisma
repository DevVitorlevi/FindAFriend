generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Org {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  cep           String
  address       String
  latitude      Decimal
  longitude     Decimal
  whatsapp      String
  state         String
  city          String
  created_at    DateTime @default(now())
  pets          Pet[]

  @@map("orgs")
}

enum Age {
  FILHOTE
  ADULTO
  IDOSO
}

enum Size {
  PEQUENO
  MEDIO
  GRANDE
}

model Pet {
  id          String     @id @default(uuid())
  name        String
  description String
  age         Age
  size        Size
  adopted     Boolean    @default(false)
  created_at  DateTime   @default(now())
  org         Org        @relation(fields: [org_id], references: [id])
  org_id      String
  images      PetImage[]

  @@map("pets")
}

model PetImage {
  id         String   @id @default(uuid())
  url        String
  pet_id     String
  pet        Pet      @relation(fields: [pet_id], references: [id])
  created_at DateTime @default(now())
}
