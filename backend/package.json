  "scripts": {
    "start:dev": "tsx watch src/server.ts",
    "start": "node build/server.js",
    "build": "tsup src --out-dir build",
    "test": "vitest run --config ./vitest.config.ts",
    "test:watch": "vitest --config ./vitest.config.ts",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "test:e2e:watch": "vitest --config ./vitest.config.e2e.ts",
    "docker:test": "docker-compose up -d postgres-test",
    "docker:test:down": "docker-compose stop postgres-test",
    "docker:test:logs": "docker-compose logs -f postgres-test",
    "docker:dev": "docker-compose up -d postgres",
    "docker:down": "docker-compose down",
    "db:test:migrate": "dotenv -e .env.test -- npx prisma migrate deploy",
    "db:test:reset": "dotenv -e .env.test -- npx prisma migrate reset --force",
    "db:test:studio": "dotenv -e .env.test -- npx prisma studio"
  },
